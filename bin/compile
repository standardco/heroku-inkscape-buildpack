#!/usr/bin/env bash

BUILD_DIR=${1:-}
CACHE_DIR=${2:-}

# inkscape
wget -v https://gitlab.com/inkscape/inkscape-ci-docker/-/raw/master/install_dependencies.sh -O install_dependencies.sh
bash install_dependencies.sh --recommended

mkdir -p "$BUILD_DIR/.inkscape/"
cd "$BUILD_DIR/.inkscape/"
wget https://inkscape.org/gallery/item/42328/inkscape-1.3.tar.xz
tar -xf inkscape-1.3.tar.xz
cd inkscape-1.3_2023-07-21_0e150ed6c4

export PATH="$BUILD_DIR/.inkscape/inkscape-1.3_2023-07-21_0e150ed6c4/bin":$PATH